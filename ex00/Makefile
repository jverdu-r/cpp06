CXX = c++

CXXFLAGS = -std=c++98 -Wall -Werror -Wextra

SRC = src/ScalarConverter.cpp \
		src/main.cpp

TARGET = ScalarConverter

all: $(TARGET)

$(TARGET): $(SRC)
	$(CXX) $(CXXFLAGS) -o $(TARGET) $(SRC)

clean:
	rm -f $(TARGET)

re: all

PHONY: all clean re